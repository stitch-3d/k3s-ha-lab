# Example K3s HA Lab Environment

# Replace with your actual control plane node IPs
NODES=("192.168.1.101" "192.168.1.102" "192.168.1.103")

# SSH user for all nodes
USER="labuser"

# Path to SSH private key
SSH_KEY="~/.ssh/id_rsa"

# Virtual IP for kube-vip (change to match your network)
VIRTUAL_IP="192.168.100.200"

# K3s version
K3S_VERSION="v1.29.0+k3s1"
